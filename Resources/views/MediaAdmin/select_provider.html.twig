{% extends base_template %}

{% block title %}{{ 'title_select_provider'|trans }}{% endblock %}

{% block form %}
    <div class="box box-success">
        <div class="box-header">
            <h3 class="box-title">
                {{ block('title') }}
            </h3>
        </div>
        <div class="box-body">
            {% for providerId, provider in providers %}
                <div class="col-lg-2 col-md-3 col-sm-4 col-xs-6">
                    <a href="{{ admin.generateUrl('create', {'provider': providerId}) }}"
                       class="btn btn-app btn-block"
                       data-toggle="tooltip"
                       data-placement="top"
                       title="{{ provider.title|trans({}, provider.translationDomain) }}"
>
                        <i class="{{ provider.getIcon() }}"></i>
                        {{ provider.title|trans({}, provider.translationDomain) }}
                    </a>
                </div>
            {% else %}
                <span class="alert alert-info">{{ 'no_provider_available'|trans }}</span>
            {% endfor %}
            <div class="clearfix"></div>
        </div>
    </div>
{% endblock %}
