{% extends 'SonataAdminBundle:CRUD:edit.html.twig' %}

{% block sonata_tab_content %}
    <div class="row">
        <div class="col-md-7">
            {{ parent() }}
        </div>
        <div class="col-md-5">
            {% if object.providerReference is not empty %}
                <div class="box box-primary">
                    <div class="box-header">Preview</div>
                    <div class="box-body">
                        <label>Embed</label>
                        <br style="clear: both;">
                        {{ object|media(360, 230) }}
                        <br><br>
                        <label>Image</label>
                        <br>
                        {{ object|media_image(360, 230, [], 'admin_mediamonks_sonatamedia_media_image_redirect') }}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
