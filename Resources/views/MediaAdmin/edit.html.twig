{% extends 'SonataAdminBundle:CRUD:edit.html.twig' %}

{% block sonata_tab_content %}
        <div class="col-md-7">
            <div class="row">
                {{ parent() }}
            </div>
        </div>
        <div class="col-md-5" style="padding-left:0;">
            {% if object.providerReference is not empty %}
                <div class="box box-primary">
                    <div class="box-header"><h4 class="box-title">Preview</h4></div>
                    <div class="box-body">
                        <label>Embed</label>
                        <br style="clear: both;">
                        {{ object|media(360, 230) }}
                        <br><br>
                        <label>Image</label>
                        <br>
                        {{ object|media_image(360, 230, [], 'admin_mediamonks_sonatamedia_media_image_redirect', true) }}
                    </div>
                </div>
            {% endif %}
        </div>
{% endblock %}
