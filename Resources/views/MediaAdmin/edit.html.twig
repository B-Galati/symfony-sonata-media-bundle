{% extends 'SonataAdminBundle:CRUD:edit.html.twig' %}

{% block sonata_tab_content %}
    <div class="row">
        <div class="col-md-7">
            {{ parent() }}
        </div>
        <div class="col-md-5">
            {% if object.providerReference is not empty %}
                <div class="box box-primary">
                    <div class="box-header">Preview</div>
                    <div class="box-body">
                        {{ object|media_admin(360, 230) }}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
